{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:vue/essential",
    "plugin:@typescript-eslint/recommended",
    "@nuxtjs/eslint-config-typescript"
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "parser": "@typescript-eslint/parser",
    "sourceType": "module"
  },
  "plugins": ["vue", "@typescript-eslint"],
  "rules": {
    "quotes": ["warn", "single"],
    "semi": "off",
    "indent": ["off"],
    "no-multi-spaces": ["warn"],
    "comma-dangle": ["off"],
    "eol-last": "off",
    "space-before-function-paren": "off",
    "arrow-parens": "off"
  }
}
